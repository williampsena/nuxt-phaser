{
    "name": "nuxtjs-phaser",
    "version": "1.0.8-0",
    "description": "Empower your Phaser game with Nuxt",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "scripts": {
        "test": "jest",
        "build": "npm run build:clean && npm run build:tsc && npm run build:static",
        "build:clean": "rimraf ./dist ",
        "build:tsc": "tsc",
        "build:static": "cp -R ./src/@types ./dist && rm -rf ./dist/__tests__",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/williampsena/-nuxt-phaser"
    },
    "keywords": [
        "nuxt",
        "phaser"
    ],
    "author": "William Sena",
    "license": "MIT",
    "devDependencies": {
        "@babel/preset-env": "^7.7.4",
        "@nuxt/types": "^0.3.4",
        "@types/jest": "^24.0.23",
        "@vue/test-utils": "^1.0.0-beta.29",
        "babel-core": "^7.0.0-bridge.0",
        "jest": "^24.9.0",
        "jest-canvas-mock": "^2.2.0",
        "np": "^5.1.3",
        "phaser": "^3.20.1",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.2.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.2",
        "vue": "^2.6.10",
        "vue-jest": "^3.0.5",
        "vue-template-compiler": "^2.6.10"
    },
    "np": {
        "yarn": false
    },
    "files": [
        "dist/"
    ]
}
