{
    "name": "nuxtjs-phaser",
    "version": "1.0.17",
    "description": "Empower your Phaser game with Vue/Nuxt",
    "main": "dist/index.js",
    "types": "@types/index.d.ts",
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "scripts": {
        "test": "jest",
        "ci": "npm run build && npm run test && np, run lint && npm run check",
        "build": "npm run build:clean && npm run build:tsc && npm run build:static",
        "build:clean": "rimraf ./dist ",
        "build:tsc": "tsc",
        "build:static": "cp -R ./src/phaserGame.vue ./dist && rm -rf ./dist/__tests__",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "eslint . --ext .ts",
        "prepare": "npm run build",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/williampsena/-nuxt-phaser"
    },
    "keywords": [
        "nuxt",
        "phaser"
    ],
    "author": "William Sena",
    "license": "MIT",
    "devDependencies": {
        "@babel/preset-env": "^7.21.4",
        "@nuxt/types": "^2.16.3",
        "@types/jest": "^29.5.1",
        "@types/node": "^18.16.0",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@vue/test-utils": "^2.3.2",
        "@vue/vue3-jest": "^29.2.3",
        "eslint": "^8.39.0",
        "jest-canvas-mock": "^2.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "nuxt": "^3.4.3",
        "phaser": "^3.60.0",
        "prettier": "^2.8.8",
        "rimraf": "^5.0.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4",
        "vue": "^3.2.47"
    },
    "files": [
        "dist",
        "types"
    ]
}
